extends ../../layout.jade

block contenido
    h1 Editar imagen
    form(action="/app/imagenes/#{imagen._id}?_method=PUT", method="POST")
 
        div(class="form-group")
            label(for="title") Título:
            input(type="text", name="title", placeholder="Título de la imagen ...", id="title", class="form-control" value="#{imagen.title}")
        div(class="form-group")
            label(for="file") Imagen:
            input(type="file", name="file", id="file", class="form-control")
        div
            input(type="submit" value="Editar" class="btn btn-info")
        div
       
           